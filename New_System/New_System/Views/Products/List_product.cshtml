@model IEnumerable<New_System.Models.Product>
    @{
        ViewBag.Title = "List";
        Layout = "~/Views/Shared/_Layout.cshtml";

    }
    <div class="container">
        <div>
            @if (Model.Where(s => s.Type == "Printed bgs").ToList().Count() > 1)
            {
                <h3 style="text-align:center;">Printed bgs</h3>
                <br />
            }
            @foreach (var item in Model.Where(s => s.Type == "Printed bgs"))
            {

                <div class="col-lg-4 col-md-6">
                    <p>Name: @item.Name</p>
                    <p>Size = @item.Size CM</p>
                    <div class="card" style="width:450px">
                        <img class="card-img-top" src="@Url.Content(item.Image)" alt="@item.Name" style="height:150px; width:150px;">
                        <div class="card-body">
                            <h4 class="card-title">Salary @item.Salary P</h4>
                            <a href="@Url.Action("Details", "Products", new { id = item.Id })" class="btn btn-primary stretched-link">See Content</a>
                            <p><br /></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <br />
        <div>
            @if (Model.Where(s => s.Type == "Kyse").ToList().Count() > 1)
