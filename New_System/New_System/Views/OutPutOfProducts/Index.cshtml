@model IEnumerable<New_System.Models.OutPutOfProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainView.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("All OutProduct", "All_OutProduct")
</p>
<p>
    @Html.ActionLink("OutPutProducts In Month", "Products_Month")
</p>
<p style="float:right">
    @Html.ActionLink("DailyProducts", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name_Product)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Isert_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayName("Change Quantity")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isert_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @using (Html.BeginForm("ChangeQuantity", "OutPutOfProducts"))
                {
                    <input type="text" name="Quantity" id="Quantity" />
                    <input type="number" value="@item.Id_Product" id="IdProduct" name="IdProduct" hidden />
                    <input type="number" value="@item.Id" name="ID" id="ID" hidden />
                    <input type="submit" value="Change" />
                }
            </td>
        </tr>
    }

</table>
